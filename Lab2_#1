#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */ 
    int p,t;
    float r,si,ci;
    scanf("%d %f %d ",&p,&r,&t);
    si=(p*r*t)/100.0;
    ci=(p*pow((1+(r/100.0)),t))-p;
    printf("%.2f %.2f ",si,ci);
    return 0;
}
